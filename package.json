{
  "name": "wordle",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n server,web -c auto \"npm run -w @wordle/server dev\" \"npm run -w @wordle/web dev\"",
    "build": "npm run -w @wordle/game-core build && npm run -w @wordle/protocol build && npm run -w @wordle/server build && npm run -w @wordle/web build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run -ws test --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^1.6.1",
    "wordle-words": "^0.0.0"
  },
  "dependencies": {
    "tsup": "^8.5.0",
    "zod": "^4.0.17"
  }
}
